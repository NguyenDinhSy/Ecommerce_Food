<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add new a product"
        android:textSize="26sp"
        android:textAlignment="center"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <ImageView
            android:id="@+id/an_vat"
            android:layout_width="199dp"
            android:layout_height="100dp"

            app:srcCompat="@drawable/an_vat" />

        <ImageView
            android:id="@+id/nhau"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/an_vat"
            />

            </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <ImageView
            android:id="@+id/chay"
            android:layout_width="199dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/linear1_category_layout"
            app:srcCompat="@drawable/an_vat" />

        <ImageView
            android:id="@+id/com"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/an_vat"
            />

    </LinearLayout>

</RelativeLayout>